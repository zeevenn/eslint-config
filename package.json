{
  "name": "@zeevenn/eslint-config",
  "type": "module",
  "version": "0.2.3",
  "packageManager": "pnpm@10.17.0",
  "description": "ESLint with Prettier",
  "author": "ziven <contact@ziven.me>",
  "license": "ISC",
  "keywords": [
    "eslint",
    "prettier"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "tsdown": "tsdown",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "inspector": "eslint-config-inspector",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^2.1.4",
    "eslint-plugin-prettier": "^5.5.4"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.3.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/lodash": "^4.17.20",
    "eslint": "^9.36.0",
    "jiti": "^2.6.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.5",
    "rollup": "^4.52.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
